---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <link href="/favicon.ico" rel="shortcut icon" />
    <link
      href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 255, 255, 255; /* White */
    --accent-light: 255, 255, 255; /* White */
    --accent-dark: 0, 0, 0; /* Black */
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-dark)) 60%
    );

    --primary-black: #13151a;
    --secondary-black: #23262d;
  }

  html {
    font-family: "Quicksand", sans-serif;
    background: var(--primary-black);
    background-size: 224px;
    color: #ffffff;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
    margin-top: 0;
    margin-bottom: 0;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1;
    margin-top: 0;
    margin-bottom: 0;
  }

  h3 {
    font-size: 1rem;
    font-weight: 600;
    line-height: 1;
    margin-top: 0;
    margin-bottom: 0;
  }

  a {
    line-height: 0;
    color: #ffffff;
    text-decoration: none;
  }

  p {
    font-size: 0.8rem;
    font-weight: 400;
    line-height: 1.5;
    color: #a6a6a6;
  }
  span {
    font-size: 0.8rem;
    font-weight: 400;
    line-height: 1.5;
    color: #a6a6a6;
  }

  .text-gradient {
    font-size: 1rem;
    font-weight: 600;
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .important-text {
    color: #ffffff;
    font-size: 0.8rem;
    font-weight: 600;
  }
</style>
