---
const { datalist } = Astro.props;
---

<div class="image-card-grid">
  {
    datalist.map((data: any) => (
      <a href={data.href} target="_blank" class="image-card">
        <div class="image-container">
          <img src={data.imageSrc} alt={data.imageAlt} />
          <div class="overlay">
            <div class="text-content">
              <p>{data.text || "More Info"}</p>
            </div>
          </div>
        </div>
      </a>
    ))
  }
</div>

<style>
  .image-card-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-top: 1rem;
    margin-bottom: 2rem;
  }

  @media (max-width: 600px) {
    .image-card-grid {
      grid-template-columns: 1fr;
    }
  }

  .image-card {
    display: block;
    overflow: hidden;
    border-radius: 1rem;
    position: relative;
  }

  .image-container {
    position: relative;
    transition:
      transform 0.5s ease,
      box-shadow 0.5s ease;
  }

  img {
    width: 100%;
    border-radius: 1rem;
    display: block;
    transition: filter 0.5s ease;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(19, 21, 26, 0.7);
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.5s ease;
    border-radius: 1rem;
    text-align: center;
  }

  .text-content {
    padding: 1rem;
  }

  .image-card:hover .image-container {
    transform: scale(1.1);
    box-shadow: 0 10px 20px rgba(19, 21, 26, 0.6);
  }

  .image-card:hover .overlay {
    opacity: 1;
  }
</style>
